{{! USER CONFIGURATION OF THIS PAGE IS NOT REQUIRED }}
{{!< default}}

{{#post}}

<div class="index">
    <div class="wrapper">
        <h1 class="right">{{title}}</h1>
        <h2 class="left">Introduction</h2>
    </div>
</div>

<div class="profile {{post_class}}">
    <img src="{{author.image}}" class="profileimage" alt="user">
    <h4>{{author.name}}</h4>
    {{> social_side }}
    <p>{{author.bio}}</p>
    <hr>
</div>

<div id="cover" class="cover {{post_class}}">
    <div class="background" {{#if image}} style="background-image: url({{image}})" {{/if}}></div>
    <header class="wrapper">
        <h2>
            {{#foreach tags}}
                <a href="{{url}}">{{name}}</a> 
            {{/foreach}}
        </h2>
        <h1><a href="#">{{{title}}}</a></h1>
        <span>
            Posted by {{author}}
                on <i class="fa fa-clock-o"></i> <time datetime="{{date format="YYYY-MM-DD"}}">{{date format='MMMM Do, YYYY'}}</time>.
        </span>
    </header>
    <i class="fa fa-chevron-down movedown"></i>
</div>

<section class="posts wrapper">
    <article class="post {{post_class}}">
        <header>
            <div class="feature"><span>Featured</span><i class="fa fa-bookmark fa-lg"></i></div>
            <h2>
                {{#foreach tags}}
                    <a href="{{url}}">{{name}}</a> 
                {{/foreach}}
            </h2>
            <h1 id="posttitle"><a href="#">{{{title}}}</a></h1>
            <span>
                Posted by {{author}}
                on <i class="fa fa-clock-o"></i> <time datetime="{{date format="YYYY-MM-DD"}}">{{date format='MMMM Do, YYYY'}}</time>.
            </span>
        </header>
        <section class="postbody">
            {{content}}
        </section>
        <footer>
            {{#if tags}}
            <ul class="tags right">
                {{#foreach tags}}
                <a href="{{url}}" class="smallbutton solidgray">{{name}}</a>
                {{/foreach}}
            </ul>
            {{/if}}
        </footer>
        <div class="postprofile">
            <img src="{{author.image}}" class="author" alt="user">
            <div class="info">
                <h4>{{author.name}}</h4>
                <a href="{{author.website}}">{{author.website}}</a>
                <p>{{author.bio}}</p>
                {{> social_bottom }}
            </div>
        </div>
        <div class="comments">
            <a href="javascript:;" class="readmore smallbutton blue"><i class="fa fa-comments"></i>View Comments...</a>
            <div id="disqus_thread"></div>
            <div id="g-comments"></div>
        </div>

    </article>

</section>

{{/post}}